<Window x:Class="curs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:curs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить" Width="100" Click="AddTask_Click"/>
                <Button Content="Удалить" Width="100" Click="RemoveTask_Click"/>
                <Button Content="Сохранить" Width="100" Click="SaveTasks_Click"/>
                <Button Content="Загрузить" Width="100" Click="LoadTasks_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <ComboBox Name="FilterCombo" Width="150" SelectionChanged="FilterCombo_SelectionChanged">
                    <ComboBoxItem>Все</ComboBoxItem>
                    <ComboBoxItem>Запланировано</ComboBoxItem>
                    <ComboBoxItem>В процессе</ComboBoxItem>
                    <ComboBoxItem>Выполнено</ComboBoxItem>
                    <ComboBoxItem>Отложено</ComboBoxItem>
                </ComboBox>

                <Button Content="По дате" Width="100" Click="SortDate_Click"/>
                <Button Content="По приоритету" Width="100" Click="SortPriority_Click"/>
            </StackPanel>

            <ListBox Name="TaskListBox" Height="350"
                     SelectionChanged="TaskListBox_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Название:"/>
            <TextBox Name="TitleBox"/>

            <TextBlock Text="Описание:" Margin="0,10,0,0"/>
            <TextBox Name="DescBox" Height="60" TextWrapping="Wrap"/>

            <TextBlock Text="Срок выполнения:" Margin="0,10,0,0"/>
            <DatePicker Name="DueBox"/>

            <TextBlock Text="Приоритет:" Margin="0,10,0,0"/>
            <ComboBox Name="PriorityBox">
                <ComboBoxItem>Низкий</ComboBoxItem>
                <ComboBoxItem>Средний</ComboBoxItem>
                <ComboBoxItem>Высокий</ComboBoxItem>
                <ComboBoxItem>Критический</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Статус:" Margin="0,10,0,0"/>
            <ComboBox Name="StatusCombo">
                <ComboBoxItem>Запланировано</ComboBoxItem>
                <ComboBoxItem>В процессе</ComboBoxItem>
                <ComboBoxItem>Выполнено</ComboBoxItem>
                <ComboBoxItem>Отложено</ComboBoxItem>
            </ComboBox>

            <Button Content="Сохранить изменения"
                    Margin="0,15,0,0"
                    Click="ApplyChanges_Click"/>
        </StackPanel>
    </Grid>
</Window>
